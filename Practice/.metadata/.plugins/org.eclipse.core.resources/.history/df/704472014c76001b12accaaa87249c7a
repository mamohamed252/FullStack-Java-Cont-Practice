package coreJavaExercisesVariables.main;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		int x = 0;
		int y = 0;
		
		double a = 0;
		double b = 0;
		
		int i = 0;
		double j = 0;
		// TODO Auto-generated method stub
		
		addTwoNum(x, y);
		
		addTwoDoubleNum( a, b);
		
		addIntAndDoubleNum(i, j);
	}
	
	private static void addTwoNum(int a, int b) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter first integer to add");
		a = sc.nextInt();
		System.out.println("Please enter second integer to add");
		b = sc.nextInt();
		int sum;
		sum = a + b;
		System.out.println("Your total is: " + sum);
	
	}
	
	private static void addTwoDoubleNum(double a, double b) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter first double integer to add: ");
		a = sc.nextDouble();
		System.out.println("Please enter second double integer to add: ");
		b = sc.nextDouble();
		Double sum;
		sum = a + b;
		System.out.println("Your total is: " + sum);
		
	}
	
	private static void addIntAndDoubleNum(int a, double b) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter first  integer to add: ");
		a = sc.nextInt();
		System.out.println("Please enter second double integer to add: ");
		b = sc.nextDouble();
		int sum = (a + (int)b);
		System.out.println("Your total is: " + sum);
		
	}

}

